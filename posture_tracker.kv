#:kivy 2.3.0

<PostureTrackerApp>:
    orientation: 'vertical'
    padding: 10
    spacing: 10

    BoxLayout:
        size_hint_y: 0.9
        orientation: 'vertical'
        
        Image:
            id: camera_display
            size_hint_y: 0.85
            allow_stretch: True
            keep_ratio: True
        
        BoxLayout:
            size_hint_y: 0.15
            orientation: 'horizontal'
            spacing: 10
            padding: [0, 10, 0, 0]
            
            Label:
                text: 'Tilt Angle:'
                size_hint_x: 0.3
                font_size: '16sp'
            
            Label:
                id: tilt_label
                text: '0.0Â°'
                size_hint_x: 0.3
                font_size: '16sp'
                color: 0, 1, 0, 1
            
            Label:
                id: status_label
                text: 'Good Posture'
                size_hint_x: 0.4
                font_size: '16sp'
                color: 0, 1, 0, 1

    BoxLayout:
        size_hint_y: 0.1
        orientation: 'horizontal'
        spacing: 10
        
        Button:
            id: start_button
            text: 'Start'
            font_size: '18sp'
            on_press: app.start_tracking()
            disabled: False
        
        Button:
            id: stop_button
            text: 'Stop'
            font_size: '18sp'
            on_press: app.stop_tracking()
            disabled: True
        
        Button:
            text: 'Settings'
            font_size: '18sp'
            on_press: app.show_settings()

<SettingsPopup>:
    title: 'Settings'
    size_hint: 0.8, 0.4
    auto_dismiss: True
    
    BoxLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 10
        
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.5
            spacing: 10
            
            Label:
                text: 'Tilt Threshold (degrees):'
                size_hint_x: 0.6
            
            TextInput:
                id: threshold_input
                text: '15.0'
                multiline: False
                input_filter: 'float'
                size_hint_x: 0.4
        
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.5
            spacing: 10
            
            Button:
                text: 'Save'
                on_press: root.save_settings()
            
            Button:
                text: 'Cancel'
                on_press: root.dismiss()
